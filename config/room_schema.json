    "roomTemp": {
      "type": "string",
      "description": "Room temperature",
      "format": "temperature",
      "range": {
        "min": 18.0,
        "max": 26.0
      },
      "unit": "°C",
      "default": "21.5°C"
    },
    "wifi": {
      "type": "string",
      "description": "Network device count",
      "format": "count",
      "range": {
        "min": 1,
        "max": 5
      },
      "unit": " devices",
      "default": "3 devices"
    },
    "traffic": {
      "type": "string",
      "description": "Network traffic with activity",
      "format": "traffic",
      "activities": [
        "streaming", "gaming", "browsing", "video", "social", "work", 
        "downloads", "music", "calls", "coding", "reading", "research"
      ],
      "data_range": {
        "min": 5,
        "max": 400
      },
      "unit": "MB",
      "default": "89MB (browsing)"
    }
  },
  "consciousness_templates": [
