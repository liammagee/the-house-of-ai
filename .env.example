# Environment variables for The House of AI

# ===== AI PROVIDER CONFIGURATION =====
# Choose your AI provider: openai, anthropic, groq, openrouter, rule_based
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=  # Optional: For custom OpenAI-compatible endpoints

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Groq Configuration (fast inference)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# OpenRouter Configuration (access to multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
APP_NAME=The House of AI
SITE_URL=https://github.com/user/the-house-of-ai

# ===== APPLICATION CONFIGURATION =====
# Flask configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Database configuration
DATABASE_PATH=house_data.db

# Server configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True